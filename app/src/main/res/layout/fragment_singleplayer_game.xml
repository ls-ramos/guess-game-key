<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longynuss.guessgame.SingleplayerGame">

    <EditText
        android:id="@+id/inputNumSingle_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="@string/text_InputHint"
        android:inputType="number"
        android:maxLength="4"
        android:textAlignment="center"
        android:focusable="false"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGuessSingle_Id"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/buttons_style"
        android:fontFamily="serif-monospace"
        android:text="@string/text_buttonGuess"
        android:textAllCaps="false"
        android:textColor="@color/text_colorGreen"
        android:textSize="@dimen/textButton_sizeDefault"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/HelpBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inputNumSingle_Id">

        <Button
            android:id="@+id/buttonHelpSingle0_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar0"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle1_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar1"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle2_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar2"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle3_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar3"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle4_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar4"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle5_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar5"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle6_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar6"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle7_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar7"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle8_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar8"
            android:textColor="@color/text_colorBlack" />

        <Button
            android:id="@+id/buttonHelpSingle9_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:onClick="onBtnHelpBarClickedSingle"
            android:text="@string/text_ButtonHelpBar9"
            android:textColor="@color/text_colorBlack" />
    </LinearLayout>

    <Button
        android:id="@+id/backToMenuFromSingle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/actionModeCloseDrawable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGuessSingle_Id"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/keyboard_button3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar3"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button2"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button2" />

        <Button
            android:id="@+id/keyboard_button2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar2"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button1"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button1" />

        <Button
            android:id="@+id/keyboard_button1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar1"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button0"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button0" />

        <Button
            android:id="@+id/keyboard_button0"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar0"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/keyboard_button_backSpace"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttons_style"
            android:text="@string/clear"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/keyboard_button7" />

        <Button
            android:id="@+id/keyboard_button4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar4"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button3"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button3" />

        <Button
            android:id="@+id/keyboard_button6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar6"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button5"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button5" />

        <Button
            android:id="@+id/keyboard_button7"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar7"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button6"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button6" />

        <Button
            android:id="@+id/keyboard_button8"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar8"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button7"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button7" />

        <Button
            android:id="@+id/keyboard_button9"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar9"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button8"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button8" />

        <Button
            android:id="@+id/keyboard_button5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar5"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toLeftOf="@+id/keyboard_button0"
            app:layout_constraintTop_toBottomOf="@+id/keyboard_button0" />
    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/ListOfGuesses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:transcriptMode="alwaysScroll"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelpBar"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/keyboard" />

</android.support.constraint.ConstraintLayout>
