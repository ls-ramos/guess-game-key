<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longynuss.guessgame.MultiplayerGame">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/keyboardMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGuess_Id">

        <Button
            android:id="@+id/keyboard_button3Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar3"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button2Multi"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button2Multi" />

        <Button
            android:id="@+id/keyboard_button2Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar2"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button1Multi"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button1Multi" />

        <Button
            android:id="@+id/keyboard_button1Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar1"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button0Multi"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button0Multi" />

        <Button
            android:id="@+id/keyboard_button0Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar0"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/keyboard_button_backSpaceMulti"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttons_style"
            android:text="@string/clear"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/keyboard_button7Multi" />

        <Button
            android:id="@+id/keyboard_button4Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar4"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button3Multi"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button3Multi" />

        <Button
            android:id="@+id/keyboard_button6Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar6"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button5Multi"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button5Multi" />

        <Button
            android:id="@+id/keyboard_button7Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar7"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button6Multi"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button6Multi" />

        <Button
            android:id="@+id/keyboard_button8Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar8"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button7Multi"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button7Multi" />

        <Button
            android:id="@+id/keyboard_button9Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar9"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toRightOf="@+id/keyboard_button8Multi"
            app:layout_constraintTop_toTopOf="@+id/keyboard_button8Multi" />

        <Button
            android:id="@+id/keyboard_button5Multi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttons_style"
            android:text="@string/text_ButtonHelpBar5"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/text_colorGreen"
            app:layout_constraintLeft_toLeftOf="@+id/keyboard_button0Multi"
            app:layout_constraintTop_toBottomOf="@+id/keyboard_button0Multi" />
    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/inputNum_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="@string/text_InputHint"
        android:inputType="number"
        android:maxLength="4"
        android:textAlignment="center"
        android:focusable="false"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/HelpBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNum_Id"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonHelp0_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar0"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp1_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar1"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp2_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar2"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp3_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar3"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp4_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar4"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp5_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar5"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp6_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar6"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp7_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar7"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp8_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar8"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>

        <Button
            android:id="@+id/buttonHelp9_Id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/buttonHelpBar_Black"
            android:text="@string/text_ButtonHelpBar9"
            android:textColor="@color/text_colorBlack"
            android:onClick="onBtnHelpBarClicked"/>
    </LinearLayout>

    <TextView
        android:id="@+id/messageToPlayer_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textColor="@color/text_colorBlack"
        android:textSize="@dimen/textButton_sizeDefault"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelpBar" />

    <Button
        android:id="@+id/buttonGuess_Id"
        android:layout_width="@dimen/widthButton_Default"
        android:layout_height="50dp"
        android:background="@drawable/buttons_style"
        android:fontFamily="serif-monospace"
        android:text="@string/text_buttonGuess"
        android:textAllCaps="false"
        android:textColor="@color/text_colorGreen"
        android:textSize="@dimen/textButton_sizeDefault"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonSendNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonSendNumber_text"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <ListView
        android:id="@+id/ListOfGuesses_Multi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:transcriptMode="alwaysScroll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageToPlayer_Id"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/keyboardMulti" />

    <Button
        android:id="@+id/backToMenuFromMulti"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/actionModeCloseDrawable"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/HelpBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
